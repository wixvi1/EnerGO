<Window x:Class="EnerGO.Pages.AddReadoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnerGO.Pages"
        mc:Ignorable="d"
        Title="Readout Window" Height="300" Width="300">
    <Grid Background="White">
        <TextBlock Text="Readout" HorizontalAlignment="Center" FontSize="17"/>
        <TextBlock Text="Customer" Margin="15,35,0,0"/>
        <TextBlock Text="Value" Margin="15,70,0,0"/>
        <TextBlock Text="Comment" Margin="15,105,0,0"/>


        <ComboBox x:Name="customersCBox" Height="23" VerticalAlignment="Top" Margin="70,35,0,0" Width="170" Loaded="customersCBox_Loaded"/>
        <ComboBox x:Name="valuesCBox" Height="23" VerticalAlignment="Top" Margin="70,70,0,0" Width="170" Loaded="valuesCBox_Loaded"/>
        <TextBox x:Name="commentTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="73" VerticalAlignment="Top" Margin="70,105,0,0" Width="170"/>


        <Button x:Name="SubmitBtn" Content="Submit" Width="75" Height="25" VerticalAlignment="Bottom" Margin="0,0,0,35" Click="SubmitBtn_Click"/>
    </Grid>
</Window>
